{
  // https://nuxt.com/docs/guide/concepts/typescript
  "extends": "./app/.nuxt/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,
    "ignoreDeprecations": "5.0",
    "allowSyntheticDefaultImports": true,
    "checkJs": false,
    "jsx": "preserve",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "useUnknownInCatchVariables": true,
    "sourceMap": true,
    "types": [
      "@pinia/nuxt",
      "@nuxtjs/tailwindcss",
    ]
  }
}
